    <header>
     {{> header_nav}}
    </header>

<main class="main">
  {{#with messages}}
    <div class="messages">
      <h1 class="messages_title">{{title}}</h1>
            
    {{#each list}}
      <div class="msg">
        <strong class="msg_title">{{name}}</strong>
        <p class="msg_text">{{message}}</p>
        <span class="msg_day">{{day}}</span>
      </div>
    {{/each}}
    <a class="messages_link" href="#">All messages</a>
  {{/with}}
    </div>
  
  {{#with form}}  
  <div class="form">
    <h2 class="form_title">{{title}}</h2>
    <div class="form_inputs">
      {{#each inputs}}
        <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" class="form_input">
      {{/each}}
    </div>
    <div class="form_checkbox">
      <input type="checkbox" name="{{checkbox.name}}">
      <label for="">{{checkbox.label}}</label>
    </div>
    <button class="form_button">Sign in</button>
    <p class="form_info">{{info}}</p>
  </div>
  {{/with}}
</main>

<div class="advantages">
  {{#each advantages}}
    <div>
      <strong>{{title}}</strong>
      <p>{{text}}</p>
    </div>
  {{/each}}
</div>

    <footer>
    {{> temp_1_footer}}
  </footer>   
