<div class="expirience">
	{{#with expirience}}
	<button class="expirience_button">{{badge}}</button>
	<strong class="expirience_title">{{title}}</strong>


	<div class="list_item">
		{{#each list}}
		<div>

			<strong class="list_name">{{name}}</strong>
			<p class="list_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>






<div class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>



	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</div>