<header class="header">
	<div class="">
		{{>logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<strong class="info_title">{{title}}</strong>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">

		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}"" placeholder=" {{placeholder}}"" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>



		<button type="submit" class="form_button">{{button}}</button>

		<p class="form_info">{{info}}</p>


		{{!-- <h2 class="form_title">{{title}}</h2> --}}
	</form>
	{{/with}}







</main>

<div class="updates">
	{{#with updates}}
	<div class="upd">
		<strong class="updates_title">{{title}}</strong>
		{{#each list}}
		<div class="update">
			<div class="photo"></div>
			<div class="upd_info">

				<h1 class="upd_name">{{nickname}}</h1>
				<p class="upd_text">{{description}}</p>
			</div>
		</div>
		{{/each}}
		<a href="{{show_all.url}}" class="show_all_link">{{show_all.text}}</a>
	</div>
	{{/with}}
</div>
