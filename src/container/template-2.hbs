<div class='page'>
  <div class='page_content'>
    
    <div class="page_block">
        {{> hero title=hero.title text=hero.text}}        
    </div>
    
    <div class="page_block">
      <div class="row g-4">
        {{#each preview}}
        <div class="col-6">
          {{> card_preview data=this}}
        </div>
        {{/each}}        
      </div>
    </div>

    <div class="page_block">
      <main class="main">
        <div class="row g-0">

          <div class="col-12">
            <div class="list_header">
              <div class="row g-0">
                <div class="col-6">
                 <h2 class="list_title">List of post</h2>
                </div>
              <div class="col-6 mt-1">
              <div class="category_list">
                {{#each categories}}
                  <button class="category_button">{{text}}</button>
                {{/each}}
              </div>
              </div>
              </div>
            </div>
          </div>

        <div class="col-7">
          <div class="list">
            {{#each news}}
            {{> card_post data=this}}
            {{/each}}
          </div>          
        </div>

          <div class="col-5">
            <aside class="list_aside">
              <div class="about">
                <h4 class="about_title">About</h4>
                <p class="about_text">{{about}}</p>
              </div>
              {{> link_list data=archive title="Archives"}}  
              {{> link_list data=social title="Social"}}             
            </aside>
          </div>
        </div>
      </main>
    </div>   
  </div>
</div>